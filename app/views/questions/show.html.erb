<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @question.title %>
</p>

<p>
  <b>Content:</b>
  <%= @question.content %>
</p>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<h1>Listing answers</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Best</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @question.answers.each do |answer| %>
  <tr>
    <td><%= answer.body %></td>
    <td><%= answer.best %></td>
    <td><%= link_to 'Edit', edit_question_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_for [@question, @question.answers.build] do |f| %>
  <div class="field">
    <%=f.label :body  %> <br />
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

