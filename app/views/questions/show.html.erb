<p id="notice"><%= notice %></p>
<h4 id="alert"><%= alert %></h4>

<p>
  <h2>
    <%= @question.title %>
  </h2>
</p>

<p>
  <h3>
    <%= @question.content %>
  </h3>
</p>

  <h4>
    <b>Pregunta Hecha por: </b>
      <%=@question.user.username %>
  </h4>
  <br />


  <h4>
    <b>Comentarios: </b>
  </h4>
  <br />
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @question.comment_questions.each do |comment_question| %>
  <tr>
    <td>
    </td>
    <td><%= comment_question.body %></td>
    <td></td>
    <td>
      <%= link_to 'Destroy', [@question, comment_question], method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<%= form_for [@question, @question.comment_questions.build] do |f| %>
  <div class="field">
    <%=f.label :Comentar %> 
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<h2>Respuestas Relacionadas:</h2>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @question.answers.each do |answer| %>
  <tr>
    <td>
       <b><%= answer.user.username %>: </b>
    </td>
    <td><%= answer.body %></td>
    <td><%= link_to 'new', new_question_answer_comment_path(@question, answer) %></td>
    <td></td>
  </tr>
    <% answer.comments.each do |comment| %>
  <tr>
    <td></td>
    <td></td>
    <td><%= comment.body %></td>
    <td></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />

<%= form_for [@question, @question.answers.build] do |f| %>
  <div class="field">
    <%=f.label :Responder %> 
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', questions_path %>
